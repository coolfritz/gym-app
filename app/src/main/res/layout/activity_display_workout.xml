<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julie.gymboni.DisplayWorkoutActivity">
    <EditText
        android:id="@+id/exercise1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/exercise1"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <EditText
        android:id="@+id/exercise2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise1"
        android:hint="@string/exercise2"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise1"
        android:layout_alignParentRight="true"/>
    <Button
        android:hint="@string/button_complete"
        android:layout_width="wrap_content"
        android:layout_below="@id/exercise2"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
